<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:id="@+id/rlCartMain"
    android:paddingEnd="@dimen/spacing_control">

    <ImageView
        android:id="@+id/ivCart"
        style="@style/TabNotSelected"
        android:contentDescription="@string/text_todo"
        android:tint="@color/menuIconColor"
        app:srcCompat="@drawable/ic_shopping_cart" />

    <TextView
        android:id="@+id/tvNotificationCount"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_alignEnd="@id/ivCart"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/menuIconColor"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_nano"
        android:visibility="gone"
        tools:text="@string/lbl_10" />
</RelativeLayout>
