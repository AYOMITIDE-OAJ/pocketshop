<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NewAppTheme" parent="Theme.MaterialComponents">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
<!--        <item name="android:actionBarStyle">@style/ActionBar</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
        <item name="titleTextColor">@color/colorTitleBarText</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColor">@color/colorTitleBarText</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
        <item name="titleTextColor">@color/colorTitleBarText</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
        <item name="titleTextStyle">@style/ActionBar.Text</item>
    </style>

    <style name="ActionBar.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorTitleBarText</item>
    </style>


    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle">
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:background">@drawable/bg_ractangle_rounded_inactive</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditTextStyle_rounded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/_25sdp</item>
        <item name="android:paddingEnd">@dimen/spacing_control</item>
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:background">@drawable/bg_ractangle_rounded_inactive</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard_new</item>
    </style>

    <style name="MaterialButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/spacing_standard</item>
        <item name="android:paddingEnd">@dimen/spacing_standard</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard_new</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAppearance">@style/FontSemiBold</item>

    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/spacing_standard</item>
        <item name="android:paddingEnd">@dimen/spacing_standard</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="cornerRadius">@dimen/spacing_control</item>
        <item name="fontPath">"fonts/Montserrat-SemiBold.ttf"</item>
    </style>

    <style name="MaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTitleBarText</item>
        <item name="rippleColor">@color/colorTitleBarText</item>
    </style>

    <style name="MaterialButtonStyle.Stroked">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TabNotSelected">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="spinner_new" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="fontPath">"fonts/Montserrat-Bold.ttf"</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="SidebarLabel.SidebarOption">
        <item name="android:drawablePadding">@dimen/spacing_standard</item>
        <item name="android:paddingTop">@dimen/spacing_middle</item>
        <item name="android:paddingBottom">@dimen/spacing_middle</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_26sdp</item>
        <item name="android:drawableTint">@color/textColorPrimary</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SidebarLabel">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/Montserrat-SemiBold.ttf</item>

    </style>

    <style name="AccountLabel">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_middle</item>
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="AccountSubLabel">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_middle</item>
        <item name="android:layout_marginTop">@dimen/spacing_control</item>
    </style>

    <style name="RecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="RatingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableEnd">@drawable/ic_star_black</item>
        <item name="android:drawablePadding">@dimen/spacing_control</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/yellow</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="RatingSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_6sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:enabled">false</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="RatingSubText">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="OrderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_control</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/dots_color</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="BottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="fontPath">"fonts/Montserrat-SemiBold.ttf"</item>
    </style>

    <style name="BottomButton.White">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BottomButton.Primary">
        <item name="android:textColor">@color/common_white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginTop">@dimen/spacing_middle</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_control_half</item>
        <item name="android:singleLine">true</item>
        <item name="fontPath">"fonts/Montserrat-Medium.ttf"</item>

    </style>

    <style name="OfferBanner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_110sdp</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard_new</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CollapsingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontMedium">
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontPath">"fonts/Montserrat-SemiBold.ttf"</item>
    </style>

    <style name="FontBold">
        <item name="fontPath">"fonts/Montserrat-Bold.ttf"</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/colorTitleBarText</item>
    </style>

    <style name="FieldRounded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_ractangle_rounded_stroke</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard_new</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="viewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard_new</item>
        <item name="android:background">@color/view_color</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="cardNumberEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_rounded_border_edittext</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:maxLength">4</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Countdown">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="fontPath">"fonts/Montserrat-Medium.ttf"</item>

    </style>

    <style name="AccountIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_control</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/textColorPrimary</item>

    </style>

    <style name="AccountLayout">
        <item name="android:layout_marginTop">@dimen/spacing_middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/bg_ractangal_stroked</item>
        <item name="android:padding">@dimen/spacing_standard</item>
        <item name="android:layout_marginStart">@dimen/spacing_middle</item>
        <item name="android:layout_marginEnd">@dimen/spacing_middle</item>

    </style>

    <style name="EditTextStyle_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/spacing_standard_new</item>
        <item name="android:paddingEnd">@dimen/spacing_standard_new</item>
        <item name="android:paddingTop">@dimen/spacing_control_half</item>
        <item name="android:paddingBottom">@dimen/spacing_control_half</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>

    </style>

    <style name="ShimmerRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">@dimen/_6sdp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="ImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/spacing_control_half</item>
        <item name="android:layout_margin">@dimen/spacing_standard</item>
    </style>
    <style name="FullScreenDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>

